{
  "name": "lms-event-management",
  "version": "2.8.0",
  "description": "Managing events just got easier!",
  "main": "gulpfile.js",
  "scripts": {
    "archive": "./tools/archive.mjs",
    "package-kpz:build": "cd tools/package-kpz && cargo build --release",
    "ktd-plugin-tools:build": "cd tools/ktd-plugin-tools && go build",
    "tools:link": "mkdir -p $HOME/.local/bin && ln -s $(pwd)/tools/ktd-plugin-tools/ktd-plugin-tools $HOME/.local/bin/kpt && ln -s $(pwd)/tools/package-kpz/target/release/package-kpz $HOME/.local/bin/p-kpz && ln -s $(pwd)/tools/perltidyc $HOME/.local/bin/ && echo 'Include $HOME/.local/bin in your path:\nexport PATH=\"$HOME/.local/bin:$PATH\"'",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:lit": "lit-analyzer \"src/**/*.ts\" --strict",
    "format": "npm run format:ts && npm run format:pl",
    "format:ts": "prettier --write --cache --cache-location .prettier.cache.json \"src/**/*.ts\"",
    "format:pl": "perltidyc --cache --cache-location .perltidy.cache.json $(find Koha/Plugin -type f -name '*.pl' -o -name '*.pm')",
    "build": "npm run css:build && npm run format && rolldown -c && just package",
    "build:no-fmt": "npm run css:build && rolldown -c && just package",
    "build:5.030": "npm run css:build && npm run format && npx rollup -c && mkdir -p 5.030 && cp -r Koha 5.030/ && find 5.030 -type f -name '*.pl' -o -name '*.pm' -exec gsed -i 's/5.032/5.030/g' {} + && p-kpz -r 'lms-event-management-5.030' -p '5.030/Koha/Plugin/Com/LMSCloud/EventManagement.pm' && rm -rf 5.030",
    "test": "mocha \"test/**/*.test.mjs\"",
    "docs:package": "./tools/generate_docs.mjs",
    "translate:extract": "./tools/extract_translations.sh --output com.lmscloud.eventmanagement.pot --source \"src/*.ts\" --source \"src/**/*.ts\" --source \"src/components/**/*.ts\" --source \"src/lib/**/*.ts\" --source \"src/lib/**/**/*.ts\" --source \"src/lib/**/**/**/*.ts\" --source \"src/lib/**/**/**/**/*.ts\" --source \"Koha/Plugin/Com/LMSCloud/*.pm\" --source \"Koha/Plugin/Com/LMSCloud/EventManagement/**/*.pm\" --template \"Koha/Plugin/Com/LMSCloud/EventManagement/views/**/*.tt\"",
    "translate:instantiate": "[[ -z \"$LOCALE\" ]] && echo \"LOCALE not set\" || (if [ ! -f locales/$LOCALE.po ]; then msginit --input=com.lmscloud.eventmanagement.pot --locale=$LOCALE --output-file=locales/$LOCALE.po; else msgmerge --update locales/$LOCALE.po com.lmscloud.eventmanagement.pot; fi)",
    "translate:package": "./tools/package_translations.mjs && ./tools/add_static_routes.mjs",
    "css:build": "./tools/generate_tw_css_result.mjs -o src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lms-tobias/lms-koha-plugin-event-management.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lms-tobias/lms-koha-plugin-event-management/issues"
  },
  "homepage": "https://github.com/lms-tobias/lms-koha-plugin-event-management#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.4",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/gettext.js": "^2.0.0",
    "@types/pell": "^1.0.4",
    "@types/showdown": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "daisyui": "^3.9.4",
    "dayjs": "^1.11.18",
    "eslint": "^9.37.0",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-wc": "^3.0.2",
    "lit-analyzer": "^2.0.3",
    "po2json": "1.0.0-beta-3",
    "postcss-lit": "^1.3.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "rolldown": "1.0.0-beta.43",
    "rollup-plugin-html-literals": "^2.0.1",
    "tailwindcss": "^3.4.18",
    "ts-lit-plugin": "^2.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "winston": "^3.18.3"
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@lit/context": "^1.1.6",
    "@lit/task": "^1.0.3",
    "@weavedev/lit-fontawesome": "^0.3.2",
    "country-to-currency": "^2.0.2",
    "dompurify": "^3.3.0",
    "gettext.js": "^2.0.3",
    "history": "^5.3.0",
    "interactjs": "^1.10.27",
    "lit": "^3.3.1",
    "lit-flatpickr": "^0.4.1",
    "pell": "^1.0.6",
    "remeda": "^2.32.0",
    "ts-pattern": "^5.8.0",
    "zod": "^4.1.12"
  },
  "previous_version": "1.6.12"
}

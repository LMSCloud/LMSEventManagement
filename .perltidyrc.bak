# Perltidy configuration for Koha project
# Use perltidy with its default man perlstyle settings
-l=100     # Maximum line length is 100 columns
-i=4       # Indentation must be 4 spaces
-ci=4      # Continuation indentation is 4 spaces
-st        # Output to STDOUT
-se        # Errors to STDERR
-vt=2      # Vertical tightness set to 2 (minimum)
-vtc=0      # No vertical alignment for closing brackets
-cti=0      # No extra indentation for closing brackets
-pt=1       # Parentheses tightness set to 1 (minimum)
-bt=1       # Brace tightness set to 1 (minimum)
-sbt=1      # Square bracket tightness set to 1 (minimum)
-bbt=1      # Block brace tightness set to 1 (minimum)
-nsfs      # No space before semicolons in for loop
